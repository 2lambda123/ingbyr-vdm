<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox id="root" prefHeight="650.0" prefWidth="550.0" stylesheets="@themes/DefaultTheme.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="%ui.file">
          <items>
            <MenuItem fx:id="menuNew" mnemonicParsing="false" text="%ui.new" />
            <MenuItem fx:id="menuOpenDir" mnemonicParsing="false" text="%ui.openDirectory" />
            <SeparatorMenuItem id="menu-separator" mnemonicParsing="false" />
            <MenuItem fx:id="menuStopAll" mnemonicParsing="false" text="%ui.stopAllTask" />
            <MenuItem fx:id="menuStartAll" mnemonicParsing="false" text="%ui.startAllTask" />
            <SeparatorMenuItem id="menu-separator" mnemonicParsing="false" />
            <MenuItem fx:id="menuPreferences" mnemonicParsing="false" text="%ui.preferences" />
            <SeparatorMenuItem id="menu-separator" mnemonicParsing="false" />
            <MenuItem fx:id="menuQuit" mnemonicParsing="false" text="%ui.quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="%ui.about">
          <items>
            <MenuItem fx:id="menuAbout" mnemonicParsing="false" text="%ui.about" />
                  <MenuItem fx:id="menuHelp" mnemonicParsing="false" text="%ui.help" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuCheckForUpdates" mnemonicParsing="false" text="%ui.checkForUpdates" />
                  <MenuItem fx:id="menuReoprtBug" mnemonicParsing="false" text="%ui.reportBug" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuDonate" mnemonicParsing="false" text="%ui.donate" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <AnchorPane id="shortcut-icons">
         <children>
            <HBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
               <children>
                  <JFXButton id="#button-download" fx:id="btnNew" text="">
                     <graphic>
                        <Region id="button-download-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnStart" text="">
                     <graphic>
                        <Region id="button-play-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnStop" text="">
                     <graphic>
                        <Region id="button-pause-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnDelete" text="">
                     <graphic>
                        <Region id="button-delete-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnOpenFile" text="">
                     <graphic>
                        <Region id="button-open-region" />
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
            <HBox AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
               <children>
                  <JFXButton fx:id="btnSearch" text="">
                     <graphic>
                        <Region id="button-search-region" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="btnPreferences" text="">
                     <graphic>
                        <Region id="button-setting-region" />
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </AnchorPane>
  </children>
</VBox>
